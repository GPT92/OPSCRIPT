local Pets = require(game:GetService("ReplicatedStorage").Library.Directory.Pets)

local fromPet = "Plane Dragon"
local toPet = "Huge Stunt Corgi"

-- Création de l'interface utilisateur (UI)
local screenGui = Instance.new("ScreenGui")
screenGui.Parent = game.Players.LocalPlayer.PlayerGui

local frame = Instance.new("Frame")
frame.Size = UDim2.new(0, 500, 0, 350)
frame.Position = UDim2.new(0.5, -250, 0.5, -175)
frame.BackgroundColor3 = Color3.fromRGB(30, 30, 30)
frame.BackgroundTransparency = 0.1
frame.BorderSizePixel = 0
frame.Parent = screenGui

-- Ajout d'un gradient pour un effet visuel moderne
local gradient = Instance.new("UIGradient")
gradient.Parent = frame
gradient.Color = ColorSequence.new(Color3.fromRGB(40, 40, 40), Color3.fromRGB(10, 10, 10))
gradient.Rotation = 45

-- Effet d'ombre pour le cadre
local shadow = Instance.new("Frame")
shadow.Size = UDim2.new(1, 12, 1, 12)
shadow.Position = UDim2.new(0, 6, 0, 6)
shadow.BackgroundColor3 = Color3.fromRGB(0, 0, 0)
shadow.BorderSizePixel = 0
shadow.BackgroundTransparency = 0.7
shadow.Parent = frame

-- Titre avec effet d'ombre et police cool
local title = Instance.new("TextLabel")
title.Text = "Huge Hunter"
title.Size = UDim2.new(1, 0, 0, 60)
title.Position = UDim2.new(0, 0, 0, 0)
title.TextColor3 = Color3.fromRGB(255, 255, 255)
title.BackgroundTransparency = 1
title.TextScaled = true
title.TextStrokeTransparency = 0.8
title.TextStrokeColor3 = Color3.fromRGB(0, 0, 0)
title.Font = Enum.Font.GothamBold
title.Parent = frame

-- Timer (Barre de progression)
local progressBarBg = Instance.new("Frame")
progressBarBg.Size = UDim2.new(0.8, 0, 0, 20)
progressBarBg.Position = UDim2.new(0.1, 0, 0.7, 0)
progressBarBg.BackgroundColor3 = Color3.fromRGB(50, 50, 50)
progressBarBg.BorderSizePixel = 0
progressBarBg.Parent = frame

local progressBar = Instance.new("Frame")
progressBar.Size = UDim2.new(0, 0, 1, 0)
progressBar.BackgroundColor3 = Color3.fromRGB(0, 255, 0)
progressBar.BorderSizePixel = 0
progressBar.Parent = progressBarBg

-- Créer un TextLabel pour afficher le pourcentage
local percentageLabel = Instance.new("TextLabel")
percentageLabel.Size = UDim2.new(1, 0, 0, 20)
percentageLabel.Position = UDim2.new(0, 0, 0.7, -25) -- Position juste au-dessus de la barre de progression
percentageLabel.TextColor3 = Color3.fromRGB(255, 255, 255)
percentageLabel.BackgroundTransparency = 1
percentageLabel.TextScaled = true
percentageLabel.TextStrokeTransparency = 0.8
percentageLabel.TextStrokeColor3 = Color3.fromRGB(0, 0, 0)
percentageLabel.Font = Enum.Font.GothamBold
percentageLabel.Parent = frame

-- Animation d'apparition du bouton
local button = Instance.new("TextButton")
button.Text = "Activate Huge Hunter"
button.Size = UDim2.new(0.8, 0, 0, 50)
button.Position = UDim2.new(0.1, 0, 0.5, 0)
button.BackgroundColor3 = Color3.fromRGB(255, 120, 0)
button.TextColor3 = Color3.fromRGB(255, 255, 255)
button.TextScaled = true
button.BorderSizePixel = 0
button.Font = Enum.Font.GothamBold
button.Parent = frame

-- Effet au survol du bouton
button.MouseEnter:Connect(function()
    button.BackgroundColor3 = Color3.fromRGB(255, 150, 0)
end)

button.MouseLeave:Connect(function()
    button.BackgroundColor3 = Color3.fromRGB(255, 120, 0)
end)

-- Animation d'apparition du menu
frame.Position = UDim2.new(0.5, -500, 0.5, -175)
frame:TweenPosition(UDim2.new(0.5, -250, 0.5, -175), Enum.EasingDirection.Out, Enum.EasingStyle.Bounce, 0.5, true)

-- Fonction pour changer de pet avec un timer
button.MouseButton1Click:Connect(function()
    button.Text = "Changing Pet..."
    button.TextColor3 = Color3.fromRGB(200, 200, 200)

    -- Timer pour simuler l'attente
    local timeToWait = 2  -- Temps en secondes
    local elapsedTime = 0

    while elapsedTime < timeToWait do
        wait(0.05) -- Réduire l'intervalle pour rendre le timer plus fluide
        elapsedTime = elapsedTime + 0.05
        progressBar.Size = UDim2.new(elapsedTime / timeToWait, 0, 1, 0) -- Remplir la barre de progression
        
        -- Mettre à jour le texte du pourcentage
        local percentage = math.floor((elapsedTime / timeToWait) * 100)
        percentageLabel.Text = percentage .. "%" -- Afficher le pourcentage
    end

    -- Processus de changement de pet
    if Pets[fromPet] and Pets[toPet] then
        for i, v in pairs(Pets[fromPet]) do
            Pets[fromPet][i] = nil
        end
        for i, v in pairs(Pets[toPet]) do
            Pets[fromPet][i] = v
        end
    end

    -- Animation de disparition du menu
    frame:TweenPosition(UDim2.new(0.5, -500, 0.5, -175), Enum.EasingDirection.In, Enum.EasingStyle.Bounce, 0.5, true, function()
        screenGui:Destroy() -- Supprimer l'UI après l'animation
    end)
end)local Pets = require(game:GetService("ReplicatedStorage").Library.Directory.Pets)

